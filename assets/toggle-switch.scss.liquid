#Embroidery .checkbox {
  position: relative;
  display: inline-block;
}
#Embroidery .checkbox:after, .checkbox:before {
  font-family: FontAwesome;
  -webkit-font-feature-settings: normal;
          font-feature-settings: normal;
  -webkit-font-kerning: auto;
          font-kerning: auto;
  -webkit-font-language-override: normal;
          font-language-override: normal;
  font-stretch: normal;
  font-style: normal;
  font-synthesis: weight style;
  font-variant: normal;
  font-weight: normal;
  text-rendering: auto;
}
#Embroidery .checkbox label {
  border: none !important;
  width: 45px;
  height: 18px !important;
  background: #E0E0E0;
  box-shadow: none !important;
  position: relative;
  display: inline-block;
  border-radius: 46px;
  transition: 0.4s;
}
#Embroidery .checkbox label:after {
  content: '';
  position: absolute;
  width: 22px;
  height: 22px;
  border-radius: 100%;
  left: 0;
  top: -2px;
  z-index: 2;
  background: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  transition: 0.4s;
}
#Embroidery .checkbox input {
  display: block !important;
  position: absolute;
  left: 20px;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
  opacity: 0;
  cursor: pointer;
}

#Embroidery .checkbox input:hover + label:after {
  box-shadow: 0 2px 15px 0 rgba(0, 0, 0, 0.2), 0 3px 8px 0 rgba(0, 0, 0, 0.15);
}
#Embroidery .checkbox input:checked + label:after {
  left: 28px;
}

#Embroidery .model-2 .checkbox label {
  width: 75px;
}
#Embroidery .model-2 .checkbox label:after {
  top: 0;
  width: 42px;
  height: 42px;
}
#Embroidery .model-2 .checkbox input:checked + label {
  background: #4BD865;
}

#Embroidery .checkbox input:checked + label {
  background: #ffa5bb !important;
}

#Embroidery .model-2 .checkbox input:checked + label:after {
  left: 35px;
}
