$theme-font-family-century: 'Lato';
$theme-font-family-varela: 'Lato';
$theme-font-family-helvetica: 'Lato';

.swell-link-list {
  text-align: center;
  .swell-link {
    max-width: 160px;
    margin: 0 auto 1em;
    width: 100%;
    display: block;
    @media ($min:$small) {
      max-width: 348px;
    }
    @media ($min:$medium) {
      max-width: 120px;
      display: inline-block;
      margin: 0 0.5em 1em;
    }
    a {
      display: block;
      width: 100%;
      font-family: $theme-font-family-century;
      font-weight: bold;
      border: 1px solid $colorBlack;
      border-radius: 5px;
      padding: 14px 5px;
      text-align: center;
      background-color: $colorBlack;
      color: $colorWhite;
      text-decoration: none;
      font-size: 14px;
      line-height: 1;
      text-transform: uppercase;
      @media ($min:$small) {
        font-size: 24px;
        padding: 20px 5px;
      }
      @media ($min:$medium) {
        font-size: 14px;
        padding: 14px 5px;
      }
    }
  }
}
.swell-reward-sparkle {
  font-family: $theme-font-family-century;
  font-weight: normal;
  &.account {
    .referral-section {
      min-height: auto;
      .referral-section-holder {
        margin-top: 0;
      }
      background-image: none;
    }
    .joining-section-login {
      margin: 0 auto 50px;

    }
  }
  p {
    font-size: 18px;
    font-family: $theme-font-family-century;
    font-weight: normal;
    margin: 0;
    line-height: 1.3;
    @media ($min: $small) {
      font-size: 28px;
    }
    @media ($min: $medium) {
      font-size: 18px;
    }
  }
  ul {
    padding: 0;
    margin: 0;
    li {
      list-style-type: none;
    }
  }
  img {
    width: 100%;
  }
  .swell-section-heading {
    text-align: center;
    margin-bottom: 50px;
    h2 {
      color: $colorBlack;
      font-size: 26px;
      line-height: 1.2;
      margin: 0 auto;
      text-align: center;
      font-family: $theme-font-family-century;
      text-transform: initial;
      letter-spacing: 0;
      position: relative;
      &:after {
        content: "";
        background-color: $colorPink;
        width: 140px;
        margin: 0 auto;
        height: 3px;
        position: absolute;
        bottom: -30%;
        left: 0;
        right: 0;
      }
      &.vip {
        &:after {
          bottom: -75%;
        }
      }
      @media ($min:$small) {
        font-size: 40px;
      }
      @media ($min:$medium) {
        font-size: 36px;
      }
    }
  }
  .desktop {
    display: none;
  }
  .mobile {
    display: block;
  }
  @media ($min:$medium) {
    .desktop {
      display: block;
    }
    .mobile {
      display: none;
    }
  }
  .swell-disable {
    opacity: 0.5;
  }
  .swell-container {
    max-width: 1198px;
    width: 100%;
    margin: 0 auto;
  }
  .sparkle-banner {
    text-align: center;
    width: 100%;
    .banner-image-holder {
      position: relative;
      .banner-image {
        &.mobile {
        }
      }
      .banner-caption {
        position: absolute;
        top: 71%;
        left: 23%;
        @media ($min:$small) {
          left: 25%;
        }
        @media ($min:$medium) {
          top: 65%;
          left: 23%;
        }
        .caption-detail {
          font-size: 14px;
          line-height: 1.3;
          @media ($min:$small) {
            font-size: 20px;
          }
          @media ($min:$medium) {
            font-size: 16px;
          }
          @media ($min:$large) {
            font-size: 20px;
          }
        }
      }
    }
  }
  .joining-section,
  .joining-section-login {
    position: relative;
    margin: -20px auto 80px;
    padding: 0 30px;
    @media ($min: $medium) {
      display: flex;
      .HIW-image {
        width: 95%;
        margin: 0 auto;
        position: absolute;
        top: 24%;
        left: 0;
        right: 0;
        opacity: 0.4;
      }
      .sidebar-content {
        flex: 1.05;
        background-color: $colorBlack;
      }
      .main-content {
        flex: 4;
      }
    }
    .main-content {
      background-color: $colorPink;
      padding: 10px;
      .swell-section-heading {
        margin-bottom: 90px;
        h2 {
          color: $colorWhite;
          margin-top: 50px;
          @media ($min: $medium) {
            text-align: left;
            margin-top: 0;
          }
          &:after {
            display: none;
          }
        }
      }
      .HIW-icon {
        font-size: 120px;
        color: $colorMidGrey;
        position: absolute;
        top: 10%;
        left: 20px;
        @media ($min: $medium) {
          top: 5%;
          left: 22%;
        }
      }
      .HIW-list {
        max-width: 700px;
        width: 100%;
        margin: 0 auto 50px;
        @media ($min: $medium) {
          display: flex;
          align-items: flex-start;
          justify-content: center;
        }
        .list-items {
          margin-bottom: 70px;
          text-align: center;
          position: relative;
          &:after {
            content:"";
            max-width: 50px;
            width: 100%;
            min-height: 14px;
            background-image: url(swell-arrow-right.png);
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            position: absolute;
            bottom: -32%;
            left: 0;
            right: 0;
            margin: 0 auto;
            transform: rotate(90deg);
          }
          @media ($min: $medium) {
            flex: 1;
            margin: 0 15px;
            &:after {
              transform: none;
              bottom: auto;
              top: 7%;
              right: -5%;
              left: auto;
            }
          }
          &:nth-child(2) {
            &:after {
              @media ($min: $medium) {
                right: -28%;
              }
            }
          }
          &:last-child {
            margin-bottom: 0;
            &:after {
              display: none;
            }
          }
          .list-title {
            font-size: 20px;
            color: $colorWhite;
            margin: 0 auto 15px;
            text-transform: uppercase;
            letter-spacing: 0;
            font-family: $theme-font-family-varela;
            @media ($min: $small) {
              font-size: 28px;
            }
            @media ($min: $medium) {
              font-size: 18px;
            }
            @media ($min: $large) {
              font-size: 22px;
            }
          }
          .list-icon {
            font-size: 50px;
            color: $colorWhite;
            @media ($min: $small) {
              font-size: 80px;
            }
            @media ($min: $medium) {
              font-size: 50px;
            }
          }
        }
      }
      .HIW-1-icon {
        font-size: 100px;
        color: $colorMidGrey;
        position: absolute;
        bottom: 0;
        right: 20px;
        @media ($min: $medium) {
          font-size: 120px;
          bottom: 10%;
          right: 0;
        }
      }
    }
  }
  .joining-section-login {
    text-align: center;
    margin-bottom: 80px;
    position: relative;
      &:before {
      content: "";
      background-image: url(refer-before.png);
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
      min-height: 23px;
      position: absolute;
      top: 60px;
      left: 30px;
      width: 100%;
      max-width: 90px;
      @media($min: $medium) {
      top: 45px;
      left: 270px;
      }
    }
      &:after {
        content: "";
        background-image: url(refer-after.png);
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        min-height: 23px;
        position: absolute;
        bottom: 30px;
        right: 0;
        width: 100%;
        max-width: 90px;
       @media($min: $medium) {
          bottom: 75px;
          right: 0;
        }
      }
    @media ($min:$medium) {
      margin-bottom: 50px;
      display: flex;
    .HIW-image {
        width: 72%;
        margin: 0 auto;
        position: absolute;
        top: 35%;
        left: 0;
        right: 0;
        opacity: 0.4;
      }
    }
     .sidebar-content {
        flex: 1;
        background-color: $colorBlack;
      }
      .main-content {
        flex: 4;
        padding: 50px 0;
      }
      .swell-icon-Redeem {
        font-size: 45px;
        color: $colorWhite;
      }
    h3 {
      color: $colorWhite;
      font-size: 16px;
      line-height: 1.3;
      font-weight: bold;
      margin: 0 auto;
      text-align: center;
      font-family: $theme-font-family-century;
      text-transform: initial;
      margin-bottom: 30px;
      span {
        color: $colorWhite;
      }
      @media ($min:$small) {
        font-size: 26px;
      }
    }
    .swell-link-list {
      .swell-link {
        @media ($min: $medium) {
          max-width: 180px;
        }
        .swell-link-redeem,
        .swell-link-history {
          background-color: $colorBlack;
          color: $colorWhite;
          font-family: $theme-font-family-helvetica;
          border-radius: 0;
          opacity: 0.9;
        }
      }
    }
  }
  .campaign-section {
    text-align: center;
    margin-bottom: 75px;
    &.login {
      .swell-campaign-list {
        .swell-campaign {
          cursor: pointer;
        }
      }
    }
    .swell-section-heading {
      margin-bottom: 80px;
    }
    .swell-campaign-list {
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      flex-wrap: wrap;
      overflow: hidden;
      padding: 0 15px;
      .swell-campaign {
        flex-basis: 50%;
        margin: 0;
        &:nth-child(2n+2) {
          .swell-campaign-content {
            border-right: 0;
            &:after {
              display: none;
            }
          }
        }
        @media ($min: $medium) {
          flex-basis: 25%;
          &:nth-child(2n+2) {
            .swell-campaign-content {
              border-right: 1px solid $bordercolorgrey;
              &:after {
                display: block;
              }
            }
          }
          &:nth-child(4n+4) {
            .swell-campaign-content {
              border-right: 0;
              &:after {
                display: none;
              }
            }
          }
        }
        /*&.swell-campaign-login {
          cursor: pointer;
        }*/
        .swell-campaign-content {
          padding: 20px 5px;
          min-height: 200px;
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          border-top: 1px solid $bordercolorgrey;
          border-right: 1px solid $bordercolorgrey;
          position: relative;
          &:after {
            content: "";
            width: 20px;
            height: 20px;
            background-color: $colorWhite;
            position: absolute;
            top: -10px;
            right: -10px;
            z-index: 1;
          }
          @media ($min: $small) {
            min-height: 250px;
          }
          .swell-campaign-icon {
            font-size: 30px;
            margin-bottom: 30px;
            @media ($min: $small) {
              font-size: 50px;
              margin-bottom: 40px;
            }
          }
          .swell-campaign-type {
            margin-bottom: 10px;
            font-size: 14px;
            color: $colorBlack;
            text-transform: initial;
            font-family: $theme-font-family-century;
            @media ($min: $small) {
              font-size: 24px;
            }
            @media ($min: $medium) {
              font-size: 16px;
            }
            @media ($min: $large) {
              font-size: 22px;
            }
          }
          .swell-campaign-value {
            font-size: 14px;
            font-weight: bold;
            line-height: 1.2;
            text-transform: initial;
            font-family: $theme-font-family-helvetica;
            @media ($min: $small) {
              font-size: 20px;
            }
            @media ($min: $medium) {
              font-size: 14px;
            }
            @media ($min: $large) {
              font-size: 18px;
            }
          }
          h3 {
            font-size: 16px;
            font-family: $theme-font-family-century;
            color: $colorPink;
            margin: 0 auto 5px;
            text-transform: initial;
            @media ($min: $small) {
              font-size: 26px;
            }
            @media ($min: $medium) {
              font-size: 18px;
            }
            @media ($min: $large) {
              font-size: 26px;
            }
          }
          p {
            font-size: 14px;
            font-family: $theme-font-family-helvetica;
            font-weight: normal;
            margin-bottom: 20px;
            @media ($min: $small) {
              font-size: 18px;
            }
            @media ($min: $medium) {
              font-size: 13px;
            }
            @media ($min: $large) {
              font-size: 16px;
            }
          }
          a {
            background-color: $colorBlack;
            padding: 10px;
            font-size: 16px;
            font-family: $theme-font-family-helvetica;
            font-weight: bold;
            color: $colorWhite;
            max-width: 200px;
            width: 100%;
            text-transform: uppercase;
          }
        }
        &:nth-child(1) {
          .swell-campaign-content {
            border-top: 0;
            &:after {
              display: none;
            }
            .swell-campaign-icon,
            .swell-campaign-value {
              color: $colorYellow;
            }
          }
        }
        &:nth-child(2) {
          .swell-campaign-content {
            border-top: 0;
            &:after {
              display: none;
            }
            .swell-campaign-icon,
            .swell-campaign-value {
              color: $colorDarkishGrey;
            }
          }
        }
        &:nth-child(3) {
          .swell-campaign-content {
            @media ($min: $medium) {
              border-top: 0;
              &:after {
                display: none;
              }
            }
            .swell-campaign-icon,
            .swell-campaign-value {
              color: $colorLightGreen;
            }
          }
        }
        &:nth-child(4) {
          .swell-campaign-content {
            @media ($min: $medium) {
              border-top: 0;
              &:after {
                display: none;
              }
            }
            .swell-campaign-icon,
            .swell-campaign-value {
              color: $colorPink;
            }
          }
        }
        &:nth-child(5) {
          .swell-campaign-content {
            .swell-campaign-icon,
            .swell-campaign-value {
              color: $colorDarkishGrey;
            }
          }
        }
        &:nth-child(6) {
          .swell-campaign-content {
            .swell-campaign-icon,
            .swell-campaign-value {
              color: $colorLightRed;
            }
          }
        }
      }
    }
  }
  .vip-table-section {
    text-align: center;
    margin-bottom: 65px;
    .swell-section-heading {
      margin-bottom: 50px;
    }
    .table-wrapper {
      padding: 0 15px;
      .swell-tier-table {
        border-collapse: collapse;
        width: 100%;
        border: 0;
        tr {
          border: 0;
          &:nth-child(3) {
            td {
              &:nth-child(4) {
                font-family: $theme-font-family-helvetica;
              }
            }
          }
          &:last-child {
            td {
              border-bottom: 0;
            }
          }
        }
        th,
        td {
          text-align: left;
          padding: 10px 8px;
          border: 0;
          border-bottom: 1px solid $bordercolorgrey;
          font-size: 15px;
          font-weight: normal;
          width: 60%;
          font-family: $theme-font-family-century;
          color: $colorBlack;
          .circle {
            display: block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin: 0 auto;
            background: #56d4de;
          }
          &:first-child {
            border-right: 1px solid $bordercolorgrey;
            font-family: $theme-font-family-helvetica;
          }
          &:not(:first-child) {
            text-align: center;
            width: 30%;
            @media ($min: $medium) {
              width: 15%;
            }
          }
          &:nth-child(3),
          &:nth-child(4) {
            display: none;
          }
          @media ($min: $medium) {
            width: 40%;
            font-size: 18px;
            padding: 14px 12px;
            border-right: 1px solid $bordercolorgrey;
            &:last-child {
              border-right: 0;
            }
            &:nth-child(3),
            &:nth-child(4) {
              display: table-cell;
            }
          }
          @media ($min: $large) {
            width: 25%;
          }
        }
        thead {
          tr {
            th {
              &:nth-child(2) {
                background-color: #f495b2;
                span {
                  color: $colorBlack;
                }
              }
              &:nth-child(3) {
                background-color: #f495b2;
                span {
                  color: $colorBlack;
                }
              }
              &:nth-child(4) {
                background-color: #f495b2;
                span {
                  color: $colorBlack;
                }
              }
            }
            &.swell-tier-values {
              th {
                border-bottom: 0;
                background-color: transparent;
                font-size: 12px;
                font-family: $theme-font-family-helvetica;
                padding: 10px 4px !important;
                color: $colorBlack;
                border: 0;
                vertical-align: bottom;
                font-weight: bold;
                @media ($min: $small) {
                  font-size: 16px;
                }
                @media ($min: $medium) {
                  padding: 14px 4px !important;
                }
                span {
                  display: block;
                  font-weight: normal;
                  font-size: 14px;
                  @media ($min: $small) {
                    font-size: 18px;
                  }
                }
                .current-status {
                  font-size: 12px;
                  line-height: 1;
                  margin-bottom: 10px;
                  color: #56d4de;
                  font-family: $theme-font-family-century;
                  position: relative;
                  &:after {
                    display: none;
                    @media ($min: $medium) {
                      display: block;
                      content: "";
                      background-image: url(swell-arrow-black.png);
                      background-repeat: no-repeat;
                      background-size: cover;
                      background-position: center;
