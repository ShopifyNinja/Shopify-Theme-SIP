  -ms-overflow-style: scrollbar;
}
*, *::before, *::after {
  box-sizing: inherit;
}
body {
  margin: 0;
}

$colorWhite: #fff;
$colorBlack: #000;
$colorPink: #f495b3;
$colorMidGrey: #e5e3de;

$bordercolorgrey: #e1e1e1;





$colorLightRed: #ee5666;
$colordarkRed: #d41217;
