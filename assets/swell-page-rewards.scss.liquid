.campaign-section{
  .main-content{
    width: 1035px;
    margin: 0px auto;
    padding-top: 20px;

    .swell-section-heading{
      text-align: center;

      h2{
        color: #0F0F0F;
        font-size: 30px;
        font-family: Sitka;
        font-weight: normal;
        line-height: 2;
        text-transform: uppercase;

        &:after{
          content: '';
          display: block;
          height: 4px;
          width: 213px;
          background: #FFA6B4;
          margin: 0px auto;
        }
      }

      p{
        line-height: 3;
        font-family: lato;
        font-weight: normal;
        font-size: 18px;
        color: #0F0F0F;
        text-transform: capitalize;
      }
    }

    ul.swell-campaign-list{
      float: left;

      li.swell-campaign{
        text-align: center;
        float: left;
        height: 150px;
        margin-bottom: 80px;

        @media (max-width: 768px){
          &:nth-child(odd){
            padding-left: 20px;
            padding-right: 15%;
          }
          &:nth-child(even){
            padding-right: 20px;
            padding-left: 15%;
          }
          &:nth-last-child(2), &:last-child{
            padding: 0px;
          }
        }

        &:nth-child(3n+1){
          width: 28%;
        }
        &:nth-child(3n+2){
          width: 44%;
        }
        &:nth-child(3n+3){
          width: 28%;
        }

        &:last-child{
          width: 72%;
          margin-bottom: 0px;
        }

        &:nth-last-child(2){
          margin-bottom: 0px;
        }

        .swell-campaign-content{
          position: relative;
          top: 50%;
          transform: translateY(-50%);

          .swell-campaign-icon{
            .swell-campaign-icon-content{
              i{
                font-size: 72px;
                color: #333;
                display: inline-block;
                font-family: "Font Awesome 5 Pro";
                font-style: normal;
                text-rendering: auto;
                -webkit-font-smoothing: antialiased;
                line-height: 0;

                &:after{
                  font-size: 50px;
                }
              }

              i.swell-icon-Read-our-Blog{
                &:after{
                  content: "\f5da";
                }
              }

              i.swell-icon-Create-Account{
                &:after{
                  content: "\f2f6";
                }
              }

              i.swell-icon-Earn-Points{
                &:after{
                  content: "\f155";
                }
              }

              i.swell-icon-Birthday-Bonus{
                &:after{
                  content: "\f1fd";
                }
              }

              i.swell-icon-Write-a-Review{
                &:after{
                  content: "\f4ae";
                }
              }

              i.swell-icon-Facebook{
                font-family: "fontawesome";
                &:after{
                  content: "\f09a";
                }
              }

              i.swell-icon-Instagram{
                font-family: "fontawesome";
                &:after{
                  content: "\f16d";
                }
              }
            }
          }

          .swell-campaign-type{
            span.swell-campaign-type-content{
              color: #333333;
              font-family: lato;
              font-weight: normal;
              font-size: 18px;
              text-transform: uppercase;
              line-height: 2.5;
              letter-spacing: 2px;
            }
          }

          .swell-campaign-value{
            span.swell-campaign-value-content{
              font-family: lato;
              font-weight: normal;
              font-size: 14px;
              color: #FEA4B9;
            }
          }
        }

        &:nth-child(3n+2){
          .swell-campaign-content{
            .swell-campaign-icon{
              .swell-campaign-icon-content{
                i{
                  color: #FEA4B9;
                }
              }
            }
          }
        }
        
      }

      li.custom-referral-campaign{

        .swell-campaign-content{
          font-family: "Font Awesome 5 Pro";
          width: 630px;
          height: 160px;
          float: right;
          background-color: #F495B3;
          box-shadow: 0px 0px 10px rgba(0,0,0,0.33);
          padding: 33px;
          position: relative;

          @media (max-width: 768px){
            box-shadow: none;
          }

          &:before{
            content: '\f500';
            position: absolute;
            font-weight: 100;
            font-size: 160px;
            opacity: 0.17;
            color: #FFF;
            left: -31px;
            top: -13px;

            @media (max-width: 480px){
              font-size: 193px;
              left: -62px;
              top: -13px;
            }
          }

          h3{
            width: 60%;
            font-size: 30px;
            color: #FFF;
            text-transform: uppercase;
            font-family: lato;
            font-weight: normal;
            line-height: 2;
            letter-spacing: 2px;
          }

          p{
            width: 60%;
            color: #F2F2F2;
            font-family: lato;
            font-size: 14px;
            padding-right: 58px;
          }

          .start-referring{
            width: max-content;
            display: inline-block;
            height: 45px;
            color: #FFF;
            border: 1.5px solid #FFF;
            font-family: Open Sans;
            font-weight: bold;
            font-size: 14px;
            text-transform: uppercase;        
            padding: 11px 16px;
            position: absolute;
            right: 75px;
            top: 50%;
            transform: translateY(-50%);
            line-height: 1.4;
          }
        }
      }
    }
  }
}

