$min: min-width;
$small: 480px;
$medium: 768px;
$large: 1024px;

.swell-referral-back-link {
  width: 1em;
  height: 1em;
  max-width: 15px;
  max-height: 15px;
  display: block;
  vertical-align: middle;
  margin-left: auto;
  cursor: pointer;
  position: relative;
  margin: 0 auto;
  &:after, &:before {
    background: #FFF;
    content: "";
    height: 2px;
    max-width: calc(15px * 1.414);
    position: absolute;
    top: 0;
    transition: 0.05s ease-in-out background-color;
    width: calc(1em * 1.414);
  }
  &:before {
    left: 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
    -webkit-transform-origin: left;
    -ms-transform-origin: left;
    transform-origin: left;
  }
  &:after {
    right: 0;
    -webkit-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    transform: rotate(-45deg);
    -webkit-transform-origin: right;
    -ms-transform-origin: right;
    transform-origin: right;
  }
}
.swell-referral-copy {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.94);
    z-index: 99;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 15px;
    .swell-referral-copy-sidebar {
        display: block;
        order: 2;
        max-width: 520px;
        margin: 0 auto;
        text-align: center;
        background: #000;
        @media($min: $medium) {
          max-width: auto;
          background: transparent;
        }

        .copy-image{
          display: none;
        }
    }
    .swell-referral-copy-content {
        width: 100%;
        @media($min: $medium) {
          display: flex;
          align-items: center;
          justify-content: center;
          max-width: 900px;
          margin: 0 auto;
        }
        .swell-referral-copy-main {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            position: relative;
            background-color: #f495b2;
            text-align: center;
            margin: 0 auto;
            min-height: 300px;
            padding: 50px 15px;
            max-width: 520px;
            width: 100%;
            &:before {
              display: none;
              @media($min: $medium) {
                display: block;
                content: "";
                background-image: url(refer-before.png);
                background-repeat: no-repeat;
                background-position: center;
                background-size: cover;
                min-height: 23px;
                position: absolute;
                top: 40px;
                right: -40px;
                width: 100%;
                max-width: 90px;
              }
            }
            @media($min: $medium) {
              margin-right: 0;
            }
            .swell-referral-heading {
                display: none;
            }
            .swell-referral-back-link {
                margin-bottom: 50px;
                top: -120%;
                right: 0;
                position: absolute;
                @media($min: $medium) {
                  position: relative;
                }
            }
            .swell-referral-copy-link {
                font-size: 28px;
                font-family: $theme-font-family-century;
                margin-bottom: 25px;
                font-weight: normal;
                color: $colorWhite;
                @media($min: $small) {
                    font-size: 36px;
                }
            }
            .swell-referral-copy-button {
                max-width: 200px;
                width: 100%;
                font-family: $theme-font-family-helvetica;
                border: 1px solid $colorBlack;
                padding: 15px 0;
                height: 47px;
                text-align: center;
                background-color: $colorBlack;
                color: $colorWhite;
                font-size: 14px;
                line-height: 1;
                font-weight: normal;
                border-radius: 0;
                margin-bottom: 30px;
                text-transform: uppercase;
                @media ($min: $small) {
                    max-width: 250px;
                    height: 55px;
                }
                @media ($min: $medium) {
                    max-width: 160px;
                    height: 47px;
                }
            }
            .swell-referral-details {
                font-size: 13px;
                font-weight: normal;
                font-family: $theme-font-family-helvetica;
                line-height: 1;
                color: $colorWhite;
                margin: 0;
                @media ($min: $small) {
                    font-size: 16px;
                }
            }
        }
    }
}

