$theme-font-family-century: 'Lato';
$theme-font-family-varela: 'Lato';
$theme-font-family-helvetica: 'Lato';


$rewardsNormalBlack: #0F0F0F;


.swell-reward-sparkle{

  .sparkle-banner{

    .banner-image-holder{
      position: relative;

      .banner-image.desktop{
        @media (max-width: 768px){
          display: none;
        }
      }

      .banner-image.mobile{
        display: none;
        @media (max-width: 768px){
          display: block;
          width: 100%;
        }
      }

      .banner-caption{
        position: absolute;
        max-width: 1035px;
        width: 1035px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);

        .caption-title{
          font-family: Sitka Heading;
          font-size: 42px;
          font-weight: normal;
          letter-spacing: -1px;
          color: $rewardsNormalBlack;

          @media (max-width: 1024px){
            font-size: 40px;
          }

          @media (max-width: 850px){
            font-size: 32px;
          }

          @media (max-width: 768px){
            font-size: 28px;
          }

          @media (max-width: 400px){
            font-size: 24px;
          }
        }

        .caption-detail{
          font-family: Lato;
          font-weight: normal;
          font-size: 18px;
          color: $rewardsNormalBlack;

          @media (max-width: 1099px){
            visibility: hidden;
          }
          
          @media (max-width: 1024px){
            font-size: 16px;
          }
          
          @media (max-width: 850px){
            font-size: 14px;
          }
          
          @media (max-width: 768px){
            display: none;
          }
        }

        @media (max-width: 1350px) and (min-width: 1100px){
          top: 36%;
        }

        @media (max-width: 1300px){
          max-width: 80%;
          width: 80%;
        }

        @media (max-width: 768px){
          max-width: 60%;
          width: 60%;
          top: 50%;
        }

        @media (max-width: 400px){
          max-width: 80%;
          width: 80%;
        }

        @media (max-width: 1099px){
          width: 820px;
        }
      }

    }

  }
  
  .swell-container{
    position: relative;

    .joining-section-login{
      width: 1035px;
      position: absolute;
      top: -200px;
      left: 50%;
      transform: translateX(-50%);

      svg.section-big-icon{
        position: absolute;
        font-size: 160px;
        left: 0px;
        top: 0px;
        opacity: 0.17;
        color: #FFF;
        @media (max-width: 1099px){
          font-size: 170px;
        }
      }

      svg.section-background1{
        @media (max-width: 768px){
          left: -30px;
        }
      }

      svg.section-background2{
        @media (max-width: 768px){
          left: -115px;
          font-size: 260px;
        }
      }

      .main-content{
        width: 504px;
        height: 160px;
        background-color: #F495B3;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.33);
        padding: 30px 50px 26px;
        float: left;
        position: relative;

        .swell-login-section-title{
          width: 50%;
          float: left;

          h3{
            font-family: Lato;
            font-weight: normal;
            font-size: 30px;
            color: #FFF;
            line-height: 2;

            @media (max-width: 1099px){
              line-height: 1;
              text-align: center;
            }

            @media (max-width: 768px){
              font-size: 26px;
            }

            @media (max-width: 450px){
              font-size: 22px;
            }
          }

          .swell-login-inform{
            color: #F2F2F2;
            font-family: lato;
            font-size: 14px;

            .swell-point-balance{
              color: #FFF;
              font-size: 15px;
              font-weight: bold;
            }

            .sparkle-bucks{
              color: #FFF;
            }
            
            @media (max-width: 1099px){
              text-align: center;
              line-height: 3;
            }

            @media (max-width: 768px){
              font-size: 13px;
            }

            @media (max-width: 450px){
              font-size: 12px;
            }
          }

          @media (max-width: 1099px){
            width: 100%;
          }
        }

        ul.swell-link-list{
          width: 50%;
          position: relative;
          float: left;

          li.swell-link{

            float: right;

            &:first-child{
              @media (max-width: 1099px){
                float: left;
              }
              @media (max-width: 768px){
                margin-right: 6px;
                width: calc(50% - 6px);
              }
            }

            &:last-child{
              @media (max-width: 768px){
                margin-left: 6px;
                width: calc(50% - 6px);
              }
            }

            a{
              color: #FFF;
              text-decoration: none;
              width: 175px;
              height: 45px;
              border: 1.5px solid #FFF;
              text-align: center;
              font-family: Open Sans;
              font-weight: bold;
              font-size: 14px;
              text-transform: uppercase;
              display: block;
              line-height: 3;
              overflow: hidden;

              &:first-child{
                margin-bottom: 12px;
              }

              @media (max-width: 768px){
                margin: 0px;
                width: 100%;
                font-size: 13px;
              }

              @media (max-width: 480px){
                font-size: 12px;
                height: 37px;
                margin-top: 7px;
              }
            }

          }

          @media (min-width: 769px) and (max-width: 1099px){
            width: 100%;
            left: 50%;
            transform: translateX(-50%);
          }

          @media (max-width: 768px){
            width: 100%;
          }

        }

        @media (max-width: 1099px){
          padding: 25px 17px 23px 17px;
          height: 170px;
          width: 400px;
          position: relative;
        }

        @media (max-width: 768px){
          width: 100%;
          height: 160px;
          margin-bottom: 12px;
          padding: 25px 21px 23px 21px;
        }
      }

      .sidebar-content{
        width: 504px;
        height: 160px;
        background-color: #F495B3;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.33);
        padding: 9px 50px;
        float: right;
        position: relative;

        .swell-sidebar-section{
          width: 50%;
          height: 100%;

          &:first-child{
            float: left;
            position: relative;
            border-right: 1px solid #ffffff91;

            .swell-sidebar-text{
              position: absolute;
              top: 50%;
              transform: translateY(-50%);

              .swell-small-text{
                font-family: Open Sans;
                font-weight: normal;
                font-size: 18px;
                color: #F2F2F2;
                line-height: 1.2;
                letter-spacing: 0.5px;
              }

              .swell-bold-text{
                font-family: Lato;
                font-weight: bold;
                font-size: 30px;
                text-transform: uppercase;
                color: #FFF;
                letter-spacing: 3px;
                line-height: 1.3;
              }

              #customer-vip-tier{
                min-height: 40px;
              }

              @media (max-width: 768px){
                position: relative;
                text-align: center;
                top: 0px;
                transform: none;
              }
            }

            @media (max-width: 768px){
              border-right: none;
              border-bottom: 1px solid #ffffff91;
            }

            @media (max-width: 768px){
              width: 100%;
              height: 40%;
            }
          }

          &:last-child{
            float: right;
            padding-top: 15px;

            .swell-sidebar-text{
              text-align: right;
              font-size: 14px;
              font-family: lato;
              color: #F2F2F2;

              .swell-small-text{
                line-height: 1.6;
                height: 26px;
                overflow: hidden;

                @media (max-width: 768px){
                  line-height: 2.5;
                }
              }

              .swell-bold-text{
                text-align: center;
                padding-left: 50px;
                font-family: lato;
                font-size: 24px;
                text-transform: uppercase;

                @media (max-width: 1099px){
                  padding-left: 22px;
                }

                @media (max-width: 768px){
                  padding-left: 0px;
                  font-size: 22px;
                  font-weight: bold;
                  color: #FFF;
                  letter-spacing: 4px;
                }
              }

              @media (max-width: 768px){
                text-align: center;
              }
            }

            .swell-link-shop{
              width: 148px;
              height: 45px;
              display: block;
              color: #FFF;
              border: 1.5px solid #FFF;
              text-align: center;
              font-size: 14px;
              font-family: Open Sans;
              font-weight: bold;
              text-transform: uppercase;
              line-height: 3;
              float: right;
              margin-top: 20px;

              @media (max-width: 1099px){
                margin-right: 3px;
              }

              @media (max-width: 768px){
                margin: 0px auto;
                margin-top: 20px;
                float: none;
                height: 45px;
                width: 40%;
              }

              @media (max-width: 480px){
                height: 37px;
                font-size: 12px;
                margin-top: 16px;
                min-width: 145px;
              }
            }

            @media (max-width: 1099px){
              padding-top: 6px;
            }

            @media (max-width: 768px){
              width: 100%;
            }
          }
        }

        @media (max-width: 1099px){
          padding: 25px 23px 23px 23px;
          height: 170px;
          width: 400px;
        }

        @media (max-width: 768px){
          width: 100%;
          height: 260px;
          padding: 25px 19px 30px 21px;
        }

        @media (max-width: 480px){
          height: 240px;
        }
      }

      @media (max-width: 1099px){
        width: 820px;
      }

      @media (max-width: 768px){
        position: relative;
        top: -65px;
        width: 100%;
      }

      @media (max-width: 480px){
        top: -40px;
      }
    }

  }
}



