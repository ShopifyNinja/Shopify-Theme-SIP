  $(".main-header-block #ttlprod").hide();

  document.addEventListener("collectionProductsLoaded", function(event) {
    $(".main-header-block #ttlprod").show();
    
    $("#bc-sf-filter-products .index-f-products__col .product-item__price .grid-link__meta").each(function(){
  
      if(parseFloat($(this).text().replace("$","")) == 0){
        $(this).text("Free");
      }
    });
    
