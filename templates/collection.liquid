      if(parseFloat($(this).text().replace("$","")) == 0){
        $(this).text("Free");
      }
    });

  });

  
  function waitForEl(selector, callback){
    var poller1 = setInterval(function(){
        $jObject = $(selector);
        if($jObject.length < 1){
            return;
        }

        var products_count = $("#bc-sf-filter-products").children().length;
        
        if(products_count < 48){
          if($("#bc-sf-filter-products #bc-sf-filter-message").length == 1)
            products_count = 0;

          $(".main-header-block #ttlprod").text(products_count);
        }

        $(".main-header-block #ttlprod").show();
        
        clearInterval(poller1);
        callback($jObject)
    },100);
  }

  waitForEl("#bc-sf-filter-message");


   //////////////////////  SEO content optimization  /////////////////////

  var originHeight = 0;
  {% comment %} $(".collection-description.desc-bottom .container").children().each(function(){
    originHeight += $(this).height();
  }); {% endcomment %}

  $("#showMoreDesc").on("click", function(){
    
    originHeight = 0;
    $(this).prev().children().each(function(){
      originHeight += $(this).height();
    });

    var btnText = "";

    if($(this).attr("is_more") == "false"){
      btnText = "Show less";
      if(localStorage.getItem('currentLang') == 'es'){
        btnText = "Muestra menos";
      }
      $(this).prev().css("height", originHeight+"px");
      $(this).attr("is_more", "true").text(btnText);
      $(this).prev().removeClass("has-after");
    }
    else{
      btnText = "Show more";
      if(localStorage.getItem('currentLang') == 'es'){
        btnText = "Muestra mÃ¡s";
      }
