<script>
  $(function(){
    $(".vip-table-section .arrows-holder .left-arrow .arrow-icon").on('click', function(){
      var sliderParent = $(this).parents(".vip-table-section").find(".vip-list");
      var leftEl = sliderParent.find("li.list-item").last().remove();
      sliderParent.find("li.list-item").first().before(leftEl);
    });
    
    $(".vip-table-section .arrows-holder .right-arrow .arrow-icon").on('click', function(){
      var sliderParent = $(this).parents(".vip-table-section").find(".vip-list");
      var leftEl = sliderParent.find("li.list-item").first().remove();
      sliderParent.find("li.list-item").last().after(leftEl);
    });

    if(localStorage.getItem('currentLang') == "es"){
      $(".swell-reward-sparkle").addClass("swell-lang-es");
    }

    
    var staticInputVal = "";
    var itvalRefer = setInterval(function(){

      if($(".swell-referral-content-container .swell-referral-content-main h2.swell-referral-heading").length > 0){

        clearInterval(itvalRefer);

        if(localStorage.getItem('currentLang') == "es")
          $(".swell-referral-content-container .swell-referral-content-main h2.swell-referral-heading").text("Dar $5, obtener $5");

